<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Weather" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_weather</item>
        <item name="popupMenuStyle">@style/PopupMenu.Weather</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Weather</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Weather</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Weather</item>
        <item name="actionBarStyle">@style/ActionBar.Transparent.Weather</item>
        <item name="actionModeBackground">@drawable/cab_background_top_weather</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_weather</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Weather</item>
    </style>

    <style name="ActionBar.Solid.Weather" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_weather</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_weather</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_weather</item>
        <item name="progressBarStyle">@style/ProgressBar.Weather</item>
    </style>

    <style name="ActionBar.Transparent.Weather" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_weather</item>
        <item name="progressBarStyle">@style/ProgressBar.Weather</item>
    </style>

    <style name="PopupMenu.Weather" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_weather</item>
    </style>

    <style name="DropDownListView.Weather" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_weather</item>
    </style>

    <style name="ActionBarTabStyle.Weather" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_weather</item>
    </style>

    <style name="DropDownNav.Weather" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_weather</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_weather</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_weather</item>
    </style>

    <style name="ProgressBar.Weather" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_weather</item>
    </style>

    <style name="ActionButton.CloseMode.Weather" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_weather</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Weather.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Weather</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Weather</item>
    </style>

    <style name="OverFlow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

</resources>